{% extends 'base.html.twig' %}

{% block body %}
<nav>
    <a href="{{ path('app_publication_index') }}">Retour à la liste</a>
</nav>
<article>
    <h1>{{ publication.titre }}</h1>
    <div>Publié par {{ publication.auteur }} le: {{ publication.publieeLe | date('d/m/Y - H:i:s') }}</div>
    <div>
        {% autoescape false %}
        {{ publication.contenu }}
        {% endautoescape %}
        {{ publication.contenu | raw }}
    </div>
</article>
{% endblock %}

